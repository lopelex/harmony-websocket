{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "consistent-return": 2,
        "indent": [1, 4],
        "semi": [1, "always"],
        "space-unary-ops": 2,
        "no-unused-vars": 1
    }
}